@using DojoSurveyWithModel.Models
@model Survey

<div class="row">
    <div class="col"></div>
    <div class="col">
        <div>
            <h4>Submitted Info</h4>
            <div class="row">
                <label>Name:</label>
                <p>@Model.Name</p>
            </div>
            <div class="row">
                <label>Dojo Location:</label>
                <p>@Model.Location</p>
            </div>
            <div class="row">
                <label>Favorite Language:</label>
                <p>@Model.Language</p>
            </div>
            <div class="row">
                <label>Comment:</label>
                <p>@Model.Comment</p>
            </div>
            <div class="row">
                <a href="/">
                    <button class="btn btn-primary">Go Back</button>
                </a>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>